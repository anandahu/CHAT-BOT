<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C86AB321" />
            <corners
                android:radius="17dp"
                android:topRightRadius="30dp"
                android:bottomRightRadius="30dp"
                android:bottomLeftRadius="30dp" />
        </shape>
    </item>
    <!-- Stroke (Border) -->
    <item android:left="20dp" android:right="20dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#2FC57A" />
        </shape>
    </item>
    <!-- White to Green Gradient -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFFFF"
            android:endColor="#2FC57A"
            android:type="linear"
            android:angle="0" />
        </shape>
    </item>
</layer-list>
